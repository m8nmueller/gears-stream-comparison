#!/bin/sh

appendix=$1

function runIt() {
  name=$1
  if [[ $appendix == "baseline" ]] ; then cmd="./run-server.sh ../server-baselines/run-$name.sh"
  else cmd="./run-server.sh ../sensor-server-$name/run.sh"
  fi

  $cmd   1000
  $cmd  10000
  $cmd 100000
  mkdir $name-$appendix
  mv logs-* $name-$appendix
}

runIt fs2
runIt rxjava
runIt gears
